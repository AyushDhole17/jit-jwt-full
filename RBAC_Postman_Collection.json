        },
        {
          "name": "Update Role",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"displayName\": \"Updated Role Name\",\n  \"description\": \"Updated description\",\n  \"priority\": 45\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/policy/roles/:roleId",
              "host": ["{{baseUrl}}"],
              "path": ["policy", "roles", ":roleId"],
