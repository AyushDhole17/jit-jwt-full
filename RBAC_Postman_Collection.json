            "url": {
              "raw": "{{baseUrl}}/policy/roles/:roleId/permissions",
              "host": ["{{baseUrl}}"],
              "path": ["policy", "roles", ":roleId", "permissions"],
              "variable": [
                {
                  "key": "roleId",
                  "value": "ROLE_ID_HERE"
                }
              ]
            },
            "description": "Assign permissions to a specific role"
          }
