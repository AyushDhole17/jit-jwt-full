              "mode": "raw",
              "raw": "{\n  \"name\": \"custom_role\",\n  \"displayName\": \"Custom Role\",\n  \"description\": \"A custom role for specific purposes\",\n  \"priority\": 40,\n  \"permissions\": []\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/policy/roles",
              "host": ["{{baseUrl}}"],
              "path": ["policy", "roles"]
